<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fourbyfour" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/MediumSeaGreen</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/MediumSeaGreen</item>
        <item name="colorSecondaryVariant">@color/MediumSeaGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="imageViewField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/trans</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintWidth_percent">0.2</item>
        <item name="android:contentDescription">@string/imageView_empty</item>
    </style>

    <style name="imageViewRules">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/trans</item>
        <item name="android:layout_margin">8dp</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintWidth_percent">0.35</item>
        <item name="android:contentDescription">@string/imageView_empty</item>
    </style>

    <style name="buttonStyle">
        <item name="android:backgroundTint">@color/MediumSeaGreen</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_width">240dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textViewGameRulesItem">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textViewStatisticsItem">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textViewStatisticsModeLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textViewSettingsModeLabel">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="textViewSettingsSound">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="buttonDialog">
        <item name="android:backgroundTint">@color/MediumSeaGreen</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>