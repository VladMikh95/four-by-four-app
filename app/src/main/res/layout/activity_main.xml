<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/backstage_main"
        android:contentDescription="@string/imageview_backstage_content_description"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/buttonNewGame"
        style="@style/buttonStyle"
        android:layout_marginTop="36dp"
        android:onClick="onClickPlayNewGame"
        android:text="@string/buttonNewGameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonResume"
        style="@style/buttonStyle"
        android:text="@string/button_resume_text"
        android:layout_marginTop="16dp"
        android:onClick="onClickResume"
        app:layout_constraintTop_toBottomOf="@id/buttonNewGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/buttonGameRules"
        style="@style/buttonStyle"
        android:text="@string/buttonGameRulesText"
        android:onClick="onClickReadGameRules"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResume" />

    <Button
        android:id="@+id/buttonSetting"
        style="@style/buttonStyle"
        android:text="@string/botton_setting_text"
        android:onClick="onClickSettings"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGameRules"/>

    <Button
        android:id="@+id/buttonStatistics"
        style="@style/buttonStyle"
        android:text="@string/button_statistics_text"
        android:onClick="onClickReadGameRules"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSetting"/>


</androidx.constraintlayout.widget.ConstraintLayout>